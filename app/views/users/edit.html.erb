<h1>プロフィールの修正</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for (@user) do |f| %>
          名前： 
          <%= f.text_field :name %>
          メールアドレス ： 
          <%= f.text_field :email %>
          プロフィール： 
          <%= f.text_field :profile %>
          年齢： 
          <%= f.text_field :age %>
          <%= f.submit  class: "btn btn-sm btn-primary" %>
        <% end %>
    </div>
</div>